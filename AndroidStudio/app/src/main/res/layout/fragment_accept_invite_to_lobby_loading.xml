<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loadings.AcceptInviteToLobbyLoadingFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/party_creation_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading1"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/party_creation_gif"
        app:layout_constraintEnd_toEndOf="@id/party_creation_gif"
        app:layout_constraintStart_toStartOf="@id/party_creation_gif"
        android:text="@string/loading"
        android:textSize="20sp"
        android:textColor="@color/loading"/>

</androidx.constraintlayout.widget.ConstraintLayout>