<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/invite_friend_item_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/invite_friend_item_username_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/invite_friend_item_username_textview"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/invite_friend_item_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/invite_friend_item_id_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/invite_item_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@android:drawable/checkbox_on_background"
        app:layout_constraintBottom_toBottomOf="@id/invite_friend_item_username_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/invite_friend_item_username_textview"
        app:layout_constraintTop_toTopOf="@id/invite_friend_item_username_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>